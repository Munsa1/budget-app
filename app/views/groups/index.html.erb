<div class="group-c px-2">
<% @groups.each do |group| %>
  <div class="card mb-3 bg-light" >
    <div class="row g-0">
      <div class="col-3 py-2 image-c">
          <%=image_tag "#{group.icon}"%>
      </div>
      <div class="col-8">
        <div class="card-body">
        <div class= "card-d">
          <%= link_to group_expenses_path(group.id) do %>
            <h5 class="card-title"><%= group.name %></h5>
          <% end %>
          <small class="card-exp"> $<%= group.total_expenses %></small>
          </div>
          <p class="card-text"><small class="text-muted"><%= group.created_at %></small></p>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

<div class="w-100  py-1 px-1 cat-btn">
